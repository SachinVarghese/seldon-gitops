{
    "kind": "Service",
    "apiVersion": "serving.knative.dev/v1",
    "metadata": {
        "name": "production-sd-cifar10-classifier-drift-abc",
        "namespace": "production",
        "creationTimestamp": null,
        "labels": {
            "seldon.io/deployment-kind": "SeldonDeployment",
            "seldon.io/deployment-name": "cifar10-classifier",
            "seldon.io/deployment-namespace": "production",
            "seldon.io/detector-name": "abc",
            "seldon.io/detector-type": "drift"
        }
    },
    "spec": {
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "fluentd": "true",
                    "seldon-deployment-id": "cifar10-classifier",
                    "seldon.io/drift": "true"
                },
                "annotations": {
                    "autoscaling.knative.dev/maxScale": "1",
                    "autoscaling.knative.dev/minScale": "1",
                    "prometheus.io/path": "/v1/metrics",
                    "prometheus.io/port": "8080",
                    "prometheus.io/scrape": "true"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "drift-detector",
                        "image": "seldonio/alibi-detect-server:1.11.2",
                        "args": [
                            "--model_name",
                            "abc",
                            "--http_port",
                            "8080",
                            "--protocol",
                            "tensorflow.http",
                            "--storage_uri",
                            "xyz",
                            "--reply_url",
                            "http://seldon-request-logger.seldon-logs.svc.cluster.local:80",
                            "--event_type",
                            "io.seldon.serving.inference.drift",
                            "--event_source",
                            "io.seldon.serving.cifar10-classifier-abc",
                            "DriftDetector"
                        ],
                        "ports": [
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "SELDON_DEPLOYMENT_ID",
                                "value": "cifar10-classifier"
                            },
                            {
                                "name": "SELDON_DEPLOYMENT_NAMESPACE",
                                "value": "production"
                            }
                        ],
                        "resources": {},
                        "securityContext": {
                            "runAsUser": 8888
                        }
                    }
                ]
            }
        }
    },
    "status": {}
}